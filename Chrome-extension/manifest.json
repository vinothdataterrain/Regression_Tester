{
  "name": "Event Recorder",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["scripting", "activeTab", "downloads", "tabs", "storage"],
  "host_permissions": ["http://*/*", "https://*/*"], 
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
